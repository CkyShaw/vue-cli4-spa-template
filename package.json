{
	"name": "vue-cli4-spa-template",
	"version": "1.0.0",
	"license": "MIT",
	"scripts": {
		"dev": "vue-cli-service serve",
		"build": "rimraf dist/*.zip && vue-cli-service build && gulp build --gulpfile build/copyfile.js && npm run compression",
		"compression": "node build/compression.js",
		"lint": "vue-cli-service lint --cache",
		"lint:stylus": "stylelint src/**/*.{vue,styl} --cache --custom-syntax stylelint-plugin-stylus/custom-syntax",
		"lint:style": "stylelint src/**/*.{css,less} --cache --config stylelint.config.normal.js",
		"fix": "yarn prettier && yarn lint --fix && yarn lint:stylus --fix && yarn lint:style --fix",
		"prettier": "prettier --write \"src/**/*.{js,jsx,ts,json,vue,css,less,scss,md,html}\""
	},
	"dependencies": {
		"@qif/dsa-design": "^1.0.0",
		"@qif/dsa-utils": "^1.0.0",
		"@qif/iconfont": "^1.0.0",
		"ant-design-vue": "^1.7.6",
		"axios": "^0.21.1",
		"bbo": "^1.1.26",
		"core-js": "^3.15.2",
		"echarts": "^5.1.2",
		"moment": "^2.29.1",
		"resize-observer-polyfill": "^1.5.1",
		"throttle-debounce": "^3.0.1",
		"vue": "^2.6.14",
		"vue-router": "^3.5.2",
		"vuex": "^3.6.2"
	},
	"devDependencies": {
		"@qif/eslint-config": "^1.1.0",
		"@qif/prettier-config": "^1.0.0",
		"@qif/stylelint-config": "^1.0.0",
		"@vue/cli-plugin-babel": "~4.5.13",
		"@vue/cli-plugin-eslint": "~4.5.13",
		"@vue/cli-plugin-router": "~4.5.13",
		"@vue/cli-plugin-vuex": "~4.5.13",
		"@vue/cli-service": "~4.5.13",
		"babel-plugin-component": "^1.1.1",
		"babel-plugin-import": "^1.13.3",
		"compression-webpack-plugin": "^6.1.1",
		"eslint": "^7.30.0",
		"eslint-webpack-plugin": "^2.5.4",
		"gulp": "^4.0.2",
		"jszip": "^3.6.0",
		"lint-staged": "^11.0.0",
		"nib": "^1.1.2",
		"postcss-pxtorem": "^5.1.1",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"stylelint": "^13.13.1",
		"stylelint-plugin-stylus": "^0.11.0",
		"stylelint-webpack-plugin": "^2.2.2",
		"stylus": "^0.54.8",
		"stylus-bem-mixins": "^1.0.2",
		"stylus-loader": "^3.0.2",
		"vue-cli-plugin-webpack-bundle-analyzer": "^4.0.0",
		"vue-template-compiler": "^2.6.14"
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8",
		"chrome >= 38"
	],
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,ts,vue}": "vue-cli-service lint --cache --fix",
		"*.{styl,vue}": "stylelint --allow-empty-input --cache --custom-syntax stylelint-plugin-stylus/custom-syntax --fix",
		"*.{css,less}": "stylelint --allow-empty-input --cache --config stylelint.config.normal.js --fix",
		"*.{json,css,less,scss,md,html}": "prettier --write"
	}
}
